<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:text="@string/message"
            android:id="@+id/DisplayMessage"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="@string/location"
            android:id="@+id/showLocation" android:layout_gravity="center" android:background="#660099"
            android:textColor="#FFFF33" android:layout_marginBottom="4dp" android:layout_marginLeft="15dp"
            android:textStyle="bold" android:typeface="serif"/>
</LinearLayout>